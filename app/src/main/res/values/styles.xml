    <style name="CardTheme.Near" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryColor</item>
    </style>
    <style name="CardTheme.Gone" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
    </style>
    -->
    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primaryColor</item>
    </style>
</resources>
